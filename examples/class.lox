print "=== Example 4 ===";
class Breakfast {
  init() {
    this.name = "cake";
    this.number = 2;
    print "Cakes ready!";
    return;
  }

  eat() {
    if (this.number > 0) {
      print "Eating " + this.name + "...";
      this.number = this.number - 1;
    } else {
      print "Nothing to eat.";
    }
  }
}
var breakfast = Breakfast();
var quickEat = breakfast.eat;
quickEat();
breakfast.eat();
quickEat();
